{
  "jsonSort": true,
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "parser": "json",
        "jsonRecursiveSort": true
      }
    }
  ],
  "plugins": ["prettier-plugin-tailwindcss", "prettier-plugin-sort-json"],
  "printWidth": 100,
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "tailwindConfig": "./tailwind.config.ts",
  "trailingComma": "es5"
}
